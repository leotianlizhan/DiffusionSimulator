<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zhan.leo.diffusionandosmosis.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:textSize="36sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_text_view"
        android:id="@+id/textView"
        android:visibility="visible"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_diffusion"
        android:id="@+id/btnDiffusion"
        android:layout_marginTop="43dp"
        android:onClick="startDiffusion"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Osmosis"
        android:id="@+id/btnOsmosis"
        android:onClick="startOsmosis"
        android:layout_below="@+id/btnDiffusion"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explanation"
        android:id="@+id/btnExplanation"
        android:onClick="startExplanation"
        android:layout_below="@+id/btnOsmosis"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
